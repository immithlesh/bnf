<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_16sdp"
        android:orientation="vertical">

        <include
            android:id="@+id/common"
            layout="@layout/common_forgot"/>
 <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_30sdp"
    android:orientation="horizontal"
    android:gravity="center">

        <com.chaos.view.PinView
            android:id="@+id/pinview"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:hint="@string/_0124"
            android:inputType="number"
            android:itemBackground="@drawable/background_small_left"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            app:cursorColor="@color/black"
            app:cursorWidth="@dimen/_1sdp"
            app:hideLineWhenFilled="false"
            app:itemCount="4"
            app:itemHeight="@dimen/_50sdp"
            app:itemRadius="@dimen/_4sdp"
            app:itemSpacing="@dimen/_16sdp"
            app:itemWidth="@dimen/_50sdp"
            app:lineColor="@color/light_grey"
            app:viewType="rectangle" />
</LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/verifyClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:fontFamily="@font/helvetica_bold"
            android:textAllCaps="false"
            android:textSize="@dimen/_11sdp"
            android:text="@string/verify_now"
            android:textColor="@color/white"
            android:background="@drawable/button_background_red"/>


</LinearLayout>

</layout>