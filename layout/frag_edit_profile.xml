<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/backClick"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@drawable/ic_back"
                        android:tint="@color/black" />

                    <TextView
                        android:id="@+id/titleTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:fontFamily="@font/helvetica_bold"
                        android:lineSpacingExtra="@dimen/_5sdp"
                        android:text="Edit your \nBrainNForce account"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp" />

                </LinearLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/chooseBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_110sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:background="@drawable/top_round"
                        android:orientation="vertical"
                        android:padding="@dimen/_16sdp">

                        <com.google.android.material.textfield.TextInputLayout style="@style/InputBNF">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/firstNameET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/light_grey"
                                android:fontFamily="@font/helvetica"
                                android:hint="@string/first_name"
                                android:inputType="textPersonName"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout style="@style/InputBNF">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/lastNameET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/light_grey"
                                android:fontFamily="@font/helvetica"
                                android:hint="@string/last_name"
                                android:inputType="textPersonName"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/helvetica"
                            android:lineSpacingExtra="@dimen/_5sdp"
                            android:text="@string/gender"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/_11sdp" />

                        <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rbMale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:checked="true"
                                android:fontFamily="@font/helvetica"
                                android:text="@string/male"
                                android:buttonTint="@color/red"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp" />

                            <RadioButton
                                android:id="@+id/rbFemale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:checked="false"
                                android:fontFamily="@font/helvetica"
                                android:text="@string/female"
                                android:buttonTint="@color/red"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp" />

                            <RadioButton
                                android:id="@+id/rbOthers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:checked="false"
                                android:fontFamily="@font/helvetica"
                                android:text="@string/other"
                                android:buttonTint="@color/red"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp" />

                        </RadioGroup>

                        <com.google.android.material.textfield.TextInputLayout style="@style/InputBNF">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/dobET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/light_grey"
                                android:fontFamily="@font/helvetica"
                                android:hint="@string/dob"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout style="@style/InputBNF">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/phoneET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/light_grey"
                                android:fontFamily="@font/helvetica"
                                android:hint="@string/phone_number"
                                android:inputType="phone"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout style="@style/InputBNF">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/locationET"
                                style="@style/EditTextBNF"
                                android:hint="@string/location"
                                android:inputType="text" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/bioLayout"
                            style="@style/InputBNF">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/bioET"
                                style="@style/EditTextBNF"
                                android:hint="Bio"
                                android:inputType="textMultiLine" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout style="@style/InputBNF">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/emailET"
                                style="@style/EditTextBNF"
                                android:editable="false"
                                android:focusable="false"
                                android:hint="@string/email"
                                android:inputType="textEmailAddress"
                                tools:ignore="Deprecated" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:background="@drawable/box_upload_outline">

                            <TextView
                                android:id="@+id/uploadText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_65sdp"
                                android:fontFamily="@font/helvetica"
                                android:lineSpacingExtra="@dimen/_5sdp"
                                android:singleLine="true"
                                android:text="@string/upload_id_proof"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_11sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/uploadClick"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:background="@drawable/button_background_red"
                                android:fontFamily="@font/helvetica_bold"
                                android:text="@string/upload"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11sdp" />

                        </RelativeLayout>


                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/createAccClick"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:layout_marginBottom="@dimen/_60sdp"
                            android:background="@drawable/button_background_red"
                            android:fontFamily="@font/helvetica_bold"
                            android:text="@string/next"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11sdp" />


                    </LinearLayout>

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/profileImgId"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:src="@drawable/profile_placeholder"
                        app:civ_border_color="@color/purple"
                        app:civ_border_width="@dimen/_2sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</layout>